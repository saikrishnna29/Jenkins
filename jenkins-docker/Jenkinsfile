pipeline {
    agent {
        dockerfile {
            filename "jenkins-docker/Dockerfile"
            additionalBuildArgs "--tag saikrishnna29/httpd:v1"
        }
    }
    environment {
       DOCKERHUB_CRED = credentials('dockerhub-credentials')
    }
    stages {
        stage('login') {
            steps {
                sh 'echo $DOCKERHUB_CRED_PSW | docker login -u $DOCKERHUB_CRED_USR --password-stdin'
            }
        }
        stage('push') {
            steps {
                sh "docker push saikrishnna29/httpd:v1"
            }
        }
        stage('containerRun') {
            steps {
                sh "docker run -d -i -t --name httpd -p 80:80 saikrishnna29/httpd:v1"
            }
        }
    }
}
